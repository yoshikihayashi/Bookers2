<table class='table table-hover table-inverse'>

      <tbody>

        <% if @model == 'user'  %>
        <h2>User search for"<%= @content %>"</h2>
         <tr>

          <th>Image</th>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
            <% @datas.each do |user| %>
          <tr>
              <td>
                <%= link_to user_path(user) do %>
                <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <% end %>
            <% end %>
          </tr>

        <% else %>
         <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
        <h2>Book search for"<%= @content %>"</h2>

        <% @datas.each do |book| %>

          <tr>
            <td><%= link_to user_path(book.user) do %>
              <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
</table>
