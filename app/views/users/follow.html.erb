<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

    <div class='container px-5 px-sm-0'>
        <div class='row'>
          <h2>Follow Users</h2>
          <% unless @follows.empty? %>
            <% @follows.each do |follow| %>
            <tr>
              <td><%= attachment_image_tag(follow, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
              <td><%= follow.email %></td>
              <td><p><%= "フォロー数: #{ follow.followings.count}" %></p></td>
              <td><p><%= "フォロワー数: #{ follow.followers.count}" %></p></td>
              <td><%= link_to 'Show', user_path(follow), class: "user_#{follow.id}" %></td>
            </tr>
            <% end %>
          <% else %>
              <td><%= "このユーザーにフォロワーはいません" %></td>
            </tr>
          <% end %>
        </div>
    </div>
</tbody>
</table>